    </aside>
    <div class="content-wrapper">
      <%= yield %>
    </div>
    <footer class="main-footer">
      <strong><a href="https://www.sygitech.com">Sygitech</a>.</strong>
      All rights reserved.
      <div class="float-right d-none d-sm-inline-block">
      </div>
    </footer>
    <aside class="control-sidebar control-sidebar-dark">
    </aside>
  </div>
